<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemActivity"
    android:orientation="vertical"
    android:background="@drawable/bg1">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/chkhand"/>
    </LinearLayout>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="20dp"
          android:text="Chicken Handi"
          android:textSize="15sp"
          android:textColor="@color/cast_expanded_controller_background_color"
          android:textStyle="bold"/>
      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="90dp"
          android:padding="20dp"
          android:src="@drawable/sar"/>

  </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30dp"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown"
            android:textStyle="bold"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="20dp"
            android:background="@color/colorLightBlue"
            android:text="+"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:textColor="@color/cast_expanded_controller_background_color"
            android:padding="10dp"
            android:text="1"/>
      <Button
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:textColor="@color/colorWhite"
          android:background="@color/colorLightBlue"
          android:text="-"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:padding="5dp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorLightBlue"
            android:text="Add to Cart"/>

    </LinearLayout>
</LinearLayout>